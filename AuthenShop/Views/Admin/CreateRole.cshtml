@model AuthenShop.Entities.CreateRole;

@{
    ViewData["Title"] = "Create Role";
}

<div class="row">
    <section class="col-md-4 probootstrap-section mx-auto">
        <div class="container">
            <div class="probootstrap-animate overlap">
                <div class="probootstrap-form probootstrap-form-box">
                    <form asp-action="CreateRole">
                        <h3 class="font-weight-bold text-muted">Input role name</h3>
                        <div class="form-group">
                            <label asp-for="RoleName"></label>
                            <input asp-for="RoleName" class="form-control" />
                            <span asp-validation-for="RoleName" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-outline-info">Create</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}